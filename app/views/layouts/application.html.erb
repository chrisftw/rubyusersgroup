<!DOCTYPE html>
<html>
<head>
  <title>Rubyusersgroup</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render "shared/auth" %>

<% flash.each do | name, message | %>
	<%= content_tag :div, message, :id => "flash-#{name}" %>
<% end %>

<%= yield %>

</body>
</html>
